<%= render "shared/header" %>

<main>
  <div class="basket">
    <%= render "food" %>
  </div>
  <div class="food-table">
    <table class="nutrition_facts">
      <thead>
      <tr>
        <th class="name"><span>品名</span></th>
        <th class="amount"><span>摂取量</span></th>
        <th class="ingredients">エネルギー<small>kcal</small></th>
        <th class="ingredients">たんぱく質<small>g</small></th>
        <th class="ingredients">脂質<small>g</small></th>
        <th class="ingredients">糖質<small>g</small></th>
        <th class="ingredients">炭水化物<small>g</small></th>
      </tr>
      </thead>
      <tfoot>
      <tr>
        <th colspan="2"><span>合計</span></th>
        <td class="ingredients"><span>0</span></td>
        <td class="ingredients"><span>0</span></td>
        <td class="ingredients"><span>0</span></td>
        <td class="ingredients"><span>0</span></td>
        <td class="ingredients"><span>0</span></td>
      </tr>
      </tfoot>
    </table>
  </div>
</main>

